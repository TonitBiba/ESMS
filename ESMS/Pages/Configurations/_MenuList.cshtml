@page
@model ESMS.Pages.Configurations._MenuListModel
@{ 
    Layout = null;
}
<table id="tblListMenus" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Emri menus shqip</th>
            <th>Emri menus anglisht</th>
            <td>Ikona</td>
            <th>Data insertimit</th>
            <th>Veprimet</th>
        </tr> 
    </thead>
    <tbody>
        @foreach (var item in Model.menus)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.VcMenNameSq)</td>
                <td>@Html.DisplayFor(m => item.VcMenNameSq)</td>
                <td>@Html.DisplayFor(m => item.VcIcon)</td>
                <td>@Html.DisplayFor(m => item.DtInserted)</td>
                <td>
                    <div class="btn-group w-100">
                        <button type="button" class="btn btn-secondary dropdown-toggle w-100" data-toggle="dropdown">@Resource.veprimet</button>
                        <div class="dropdown-menu">
                            <button onclick="" class="dropdown-item btn btn-secondary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>&nbsp; @Resource.ndrysho</button>
                            <button class="dropdown-item"><i class="fa fa-plus"></i>&nbsp; @Resource.regjistroNenMenu</button>
                            <div class="dropdown-divider"></div>
                            <button class="dropdown-item" onclick="DeleteMenu(@item.NMenuId)"><i class="fa fa-trash"></i>&nbsp; @Resource.fshije</button>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#tblListMenus').DataTable({
            "lengthChange":false,
            "language": {
                "lengthMenu": "Duke shfaqur _MENU_ rreshta për faqe",
                "zeroRecords": "Nuk ka asnjë të dhënë",
                "info": "Duke shfaqur faqen _PAGE_ nga _PAGES_",
                "infoEmpty": "Nuk ka asnjë të dhënë",
                "infoFiltered": "(të filtruara nga _MAX_ rreshta)",
                "search": "Kërko",
                "paginate": {
                    "previous": "Prapa",
                    "first": "E para",
                    "last": "E fundit",
                    "next": "Para"
                }
            }
        });
    })
            function DeleteMenu(menuId) {
            Swal.fire({
              icon: 'warning',
              title: 'Kujdes!',
              text: 'Fshirja e menus eshte veprim i pakthyeshem.',
              cancelButtonText: "Anulo",
              confirmButtonText: "Ne rregull",
              showCancelButton: true
            }).then(response => {
                if (response) {
                    $.ajax({
                        url:'@Url.Action("")'
                    })
                }
            })
        }
</script>