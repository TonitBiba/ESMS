@using ESMS.Security;
@model IEnumerable<ESMS.Data.Model.Policy>

@{
    Layout = null;
}
<table id="tblListPolicy" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>@Resource.ruleName</th>
            <th>Claim</th>
            <th>@Resource.claimValue</th>
            <th>@Resource.dtInsertimit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @Html.AntiForgeryToken()
                <td>@Html.DisplayFor(m => item.VcPolicyName)</td>
                <td>@Html.DisplayFor(m => item.VcClaimType)</td>
                <td>@Html.DisplayFor(m => item.VcClaimValue)</td>
                <td>@Html.Raw(item.DtInserted.ToString("dd/MM/yyyy")) </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#tblListPolicy').DataTable({
            "lengthChange":false,
            "language": {
                "lengthMenu": "@Resource.dtlengthMenu",
                "zeroRecords": "@Resource.dtZeroRecord",
                "info": "@Resource.dtInfo",
                "infoEmpty": "@Resource.dtInfoEmpty",
                "infoFiltered": "@Resource.dtInfoFiltered",
                "search": "@Resource.dtSearch",
                "paginate": {
                    "previous": "@Resource.dtPrapa",
                    "first": "@Resource.dtFirst",
                    "last": "@Resource.dtLast",
                    "next": "@Resource.dtNext"
                }
            },
            responsive: true
        });
    })
</script>