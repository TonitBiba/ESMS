@page
@model ESMS.ListModel
@using System.Security.Claims
@using ESMS.Security
@{
    ViewData["Title"] = Resource.historikuPagave;
}

<div class="card">
    <div class="card-body card-block">
        <h4> @Resource.historikuPagave </h4>
        <hr />
        <table id="table" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>@Resource.emri</th>
                    <th>@Resource.mbiemri</th>
                    <th>@Resource.paga</th>
                    <th>@Resource.muaji</th>
                    <th>@Resource.data</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.payments)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Salary</td>
                        <td>@item.Month</td>
                        <td>@item.ExecutionDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#table').DataTable({
            "lengthChange": false,
            "language": {
                "lengthMenu": "Duke shfaqur _MENU_ rreshta për faqe",
                "zeroRecords": "Nuk ka asnjë të dhënë",
                "info": "Duke shfaqur faqen _PAGE_ nga _PAGES_",
                "infoEmpty": "Nuk ka asnjë të dhënë",
                "infoFiltered": "(të filtruara nga _MAX_ rreshta)",
                "search": "Kërko",
                "paginate": {
                    "previous": "Prapa",
                    "first": "E para",
                    "last": "E fundit",
                    "next": "Para"
                }
            },
            responsive: true
        })
    })
</script>

@if (Model.error != null)
{
    <script>
        $(document).ready(function (){
            showAlert(@Model.error.nError, '@Html.Raw(Model.error.ErrorDescription)')
        })
    </script>
}
